---
import Sidebar from '../components/common/Sidebar/Sidebar.astro';
import Contacts from '../components/common/contacts/Contacts.astro';
import PageTop from '../components/common/PageTop.astro';
import Pagename from '../components/common/Pagename.astro';
import BG from '../components/common/BG.astro';
import '@fontsource/libre-caslon-text';
interface Props {
	title: string;
	pagename: string;
}

const { title, pagename } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title==""?"smitharia":title+" | smitharia"}</title>
		<link rel="stylesheet" href="https://use.typekit.net/kwl5mrn.css">
		<script src="https://kit.fontawesome.com/24612b40c8.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<BG/>
		<div class="grid gap-20 grid-cols-[180px_minmax(0,auto)] p-20 pr-32 font-serif">
			<Sidebar/>
			<Pagename name={pagename}/>
			<Contacts/>
			<div class="mt-1">
				<slot />
			</div>
		</div>
		<footer class="pb-16">
			<PageTop/>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		font-weight: lighter;
		letter-spacing: 0.1rem;
		background: #13151a;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
