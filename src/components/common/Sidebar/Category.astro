---
import type { CatType } from '../../../lib/WP'

interface Props {
    title: string,
    subcats: CatType[],
}
const { title, subcats } = Astro.props;
---

<ul class="mb-2 md:mb-1 text-white">
    <li class="cat-title mb-2 md:mb-1">
        {title}
        <span class="md:hidden inline-block tri text-green">&lt;</span>
    </li>
    <ul class="category hidden md:block ml-4">
        {subcats.map(cat=>
            <li class="mb-2 md:mb-1">
                <a href={"/"+cat.slug}>
                    {cat.name}
                </a>
            </li>
        )}
    </ul>
</ul>

<style>
    .tri{
        transform: scaleX(1.3) rotate(90deg);
        transition: .2s;
    }
    .tri.active{
        transform: scaleX(1.3) rotate(-90deg);
    }
</style>

