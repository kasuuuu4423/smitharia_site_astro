<button id="hamburger">
    <span></span>
    <span></span>
    <span></span>
</button>

<style>
    button{
        height: 25px;
        width: 25px;
        position: relative;
    }
    button span{
        display: block;
        position: absolute;
        width: 25px;
        height: 2px;
        background: #fff;
        transform: translateY(-50%);
    }
    button span:nth-child(1){
        top: 0;
    }
    button span:nth-child(2){
        top: 50%;
    }
    button span:nth-child(3){
        bottom: 0;
    }
    button.active span:nth-child(1){
        top: 50%;
        transform: rotate(45deg);
    }
    button.active span:nth-child(2){
        opacity: 0;
    }
    button.active span:nth-child(3){
        top: 50%;
        transform: rotate(-45deg);
    }
</style>

